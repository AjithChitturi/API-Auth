@model UserInterface.Models.OTPModel

<!DOCTYPE html>
<html>
<head>
    <title>OTP Verification</title>
</head>
<body>
    <h2>Login</h2>
    <form asp-controller="OTP" asp-action="OTP" method="post">
        <div style="max-width: 300px; margin: 0 auto; padding: 20px; border: 1px solid #ccc; border-radius: 5px; background-color: #f7f7f7;">
            <div>
                <label for="Username" style="display: block; margin-bottom: 5px; font-weight: bold;">Username:</label>
                <input type="text" id="Username" name="Username" value="@Model.Username" style="width: 100%; padding: 8px; margin-bottom: 10px; border: 1px solid #ccc; border-radius: 3px;">
                <span asp-validation-for="Username" style="display: block; color: red; font-size: 14px; margin-top: -5px;"></span>
            </div>
            <div>
                <label for="Password" style="display: block; margin-bottom: 5px; font-weight: bold;">OTP:</label>
                <input type="password" id="Password" name="Password" value="@Model.OTP" style="width: 100%; padding: 8px; margin-bottom: 10px; border: 1px solid #ccc; border-radius: 3px;">
                <span asp-validation-for="OTP" style="display: block; color: red; font-size: 14px; margin-top: -5px;"></span>
            </div>
            <div>
                <button type="submit" style="padding: 10px 20px; background-color: #007bff; color: #fff; border: none; border-radius: 3px; cursor: pointer;">Login</button>
            </div>
        </div>

    </form>
</body>
</html>
